<mvc:View controllerName="sap.ui.demo.mongodb.controller.Main"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m">
    <Page title="MongoDB Data">
        <content>
            <VBox>
                <HBox>
                    <Label text="Archivierungsobjekt: "/>
                    <Input id="archivierungsobjektInput" placeholder="Enter Archivierungsobjekt value"/>
                    <Button text="Apply Filter" press="onApplyFilter"/>
                </HBox>
                <HBox>
                    <Button text="Show EN" press="onShowEN"/>
                    <Button text="Show DE" press="onShowDE"/>
                </HBox>
                <Table id="dataTable" items="{dataModel>/data}">
                    <headerToolbar>
                        <Toolbar>
                            <Title text="Data Table"/>
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column>
                            <Text text="Archivierungsobjekt"/>
                        </Column>
                        <Column visible="{dataModel>/showEN}">
                            <Text text="O_EN"/>
                        </Column>
                        <Column visible="{dataModel>/showDE}">
                            <Text text="O_DE"/>
                        </Column>
                        <Column>
                            <Text text="Vorgaenger"/>
                        </Column>
                        <Column visible="{dataModel>/showEN}">
                            <Text text="V_EN"/>
                        </Column>
                        <Column visible="{dataModel>/showDE}">
                            <Text text="V_DE"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{dataModel>Archivierungsobjekt}"/>
                                <Text text="{dataModel>O_EN}" visible="{dataModel>/showEN}"/>
                                <Text text="{dataModel>O_DE}" visible="{dataModel>/showDE}"/>
                                <Text text="{dataModel>Vorgaenger}"/>
                                <Text text="{dataModel>V_EN}" visible="{dataModel>/showEN}"/>
                                <Text text="{dataModel>V_DE}" visible="{dataModel>/showDE}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
    </Page>
</mvc:View>